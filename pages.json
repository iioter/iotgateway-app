			}
		},
		{
			"path": "pages/my/index",
			"style": {
				//"navigationStyle": "custom" // 隐藏系统导航栏
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/messageLog/messageLog",
			"style": {
				"navigationBarTitleText": "报文日志",
				"enablePullDownRefresh": false
			}
